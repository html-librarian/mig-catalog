# =============================================================================
# MIG CATALOG API - ПРИМЕР НАСТРОЕК ОКРУЖЕНИЯ
# =============================================================================
# ВНИМАНИЕ: Измените все секретные ключи перед использованием в продакшене!
# =============================================================================

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =============================================================================
APP_NAME=MIG Catalog API
APP_VERSION=1.3.0
DEBUG=False
ENVIRONMENT=production

# =============================================================================
# БАЗА ДАННЫХ
# =============================================================================
DATABASE_URL=postgresql://username:password@host:5432/database_name
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://username:password@host:6379

# =============================================================================
# БЕЗОПАСНОСТЬ - КРИТИЧНО ИЗМЕНИТЬ!
# =============================================================================
# Генерируйте новые ключи командой: openssl rand -hex 64
SECRET_KEY=your-64-character-secret-key-here-change-this-immediately-1234567890123456789012345678901234567890123456789012345678901234
ROTATION_SECRET_KEY=your-64-character-rotation-key-here-change-this-immediately-1234567890123456789012345678901234567890123456789012345678901234
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS НАСТРОЙКИ
# =============================================================================
# В продакшене укажите только ваши домены
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# ЛОГИРОВАНИЕ
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# КЭШИРОВАНИЕ
# =============================================================================
CACHE_TTL=3600
CACHE_ENABLED=True

# =============================================================================
# МОНИТОРИНГ
# =============================================================================
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# =============================================================================
# HTTPS НАСТРОЙКИ (для продакшена)
# =============================================================================
SSL_CERT_FILE=/path/to/your/certificate.crt
SSL_KEY_FILE=/path/to/your/private.key
SSL_CA_FILE=/path/to/your/ca_bundle.crt

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================
# Максимальное количество попыток входа
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=300

# Длина сессии
SESSION_TIMEOUT_MINUTES=60

# Настройки паролей
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=True
REQUIRE_NUMBERS=True
REQUIRE_UPPERCASE=True

# =============================================================================
# НАСТРОЙКИ ДЛЯ РАЗРАБОТКИ
# =============================================================================
# Раскомментируйте для разработки:
# DEBUG=True
# ENVIRONMENT=development
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
# DATABASE_URL=postgresql://postgres:postgres@localhost/mig_catalog
# REDIS_URL=redis://localhost:6379
